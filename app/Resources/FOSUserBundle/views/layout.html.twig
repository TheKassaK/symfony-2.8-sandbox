{% extends '::base.html.twig' %}

{% block body %}

{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}

<div class="col-md-6 col-md-offset-3">
    {% block fos_user_content %}
    {% endblock fos_user_content %}
</div>

{% endblock %}
